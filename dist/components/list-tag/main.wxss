.g-img {
  width: 100%;
}
.tag {
  position: absolute;
  left: 10px;
  top: 10px;
  width: 32px;
  height: 15px;
  background-position: left top;
  background-repeat: no-repeat;
  background-size: 32px auto;
}
.tiaomu {
  background-image: url(http://localhost:3333/dist/img/tiaomu.164ff.png);
}
