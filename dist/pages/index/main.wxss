.body {
  padding-bottom: calc(80px + env(safe-area-inset-bottom));
  background-color: #f2f2f2;
  min-height: 100vh;
}
.header {
  width: 100%;
  height: 252px;
  background-size: contain;
  opacity: 1;
}
.search {
  margin-top: 10px;
  padding-left: 35px;
  width: 312px;
  height: 40px;
  box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.13);
  opacity: 1;
  border-radius: 27px;
}
.top-search {
  width: 210px;
  padding-left: 30px;
  height: 32px;
  border: 1px solid #f7f3f5;
  border-radius: 17px;
  color: #333;
}
.grid {
  margin: -65px auto 0;
  width: 96%;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr;
  box-sizing: border-box;
  gap: 10px;
}
.list-wrap > .item {
  margin-bottom: 10px;
  box-sizing: border-box;
  box-shadow: 0px 3px 30px rgba(0, 0, 0, 0.06);
  opacity: 1;
  border-radius: 6px;
}
