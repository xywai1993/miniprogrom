{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": false,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "outDir": "./build",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
